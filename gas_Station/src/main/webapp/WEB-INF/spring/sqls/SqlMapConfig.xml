<!-- <?xml version="1.0" encoding="UTF-8"?> -->
<!-- 마이바티스 -->
<!-- 1환경설정파일 config -->
<!-- 2쿼리작성파일 mapper -->

<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
  
  <configuration>
<!-- typeAlias에 sql_mapper.xml에서 사용하게 될 결과나 파라미터를 담을 객체를 정의 -->
  	<typeAliases>
  		<typeAlias type="com.hk.gas.dtos.GasUserDto" alias="GasUserDto"/>
  		<typeAlias type="com.hk.gas.dtos.BookMarkDto" alias="BookMarkDto"/>
  		<typeAlias type="com.hk.gas.dtos.FreeBoardDto" alias="FreeBoardDto"/>
  	</typeAliases>
  
<!--   쿼리를 작성할 xml파일 위치를 설정 -->
  	<mappers>
  		<mapper resource="/sqls/gas_mapper.xml"/>
  	</mappers>
  
  </configuration>